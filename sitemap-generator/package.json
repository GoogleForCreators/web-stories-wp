{
  "name": "sitemap-generator",
  "title": "XML Sitemap Generator",
  "private": true,
  "description": "Generates XML sitemap for the website.",
  "author": "Google",
  "license": "Apache-2.0",
  "type": "module",
  "main": "index.js",
  "keywords": [
    "web-stories"
  ],
  "homepage": "https://github.com/google/web-stories-wp",
  "repository": {
    "type": "git",
    "url": "https://github.com/google/web-stories-wp.git"
  },
  "bugs": {
    "url": "https://github.com/google/web-stories-wp/issues"
  },
  "dependencies": {
    "sitemap": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/eslint-parser": "^7.11.5",
    "@babel/plugin-syntax-top-level-await": "^7.10.4",
    "@prettier/plugin-xml": "^1.0.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-header": "^3.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^36.0.6",
    "eslint-plugin-markdown": "^2.2.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^11.1.1",
    "markdownlint-cli": "^0.28.1",
    "prettier": "^2.1.1"
  },
  "scripts": {
    "lint:js": "eslint --ext .js,.cjs,.md .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "markdownlint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --relative"
    }
  },
  "lint-staged": {
    "*.js": "eslint --fix",
    "*.json": "prettier --write",
    "*.md": [
      "eslint --fix",
      "markdownlint -f"
    ],
    "*.(xml|xml.dist)": "prettier --write",
    "*.yml": "prettier --write"
  }
}
