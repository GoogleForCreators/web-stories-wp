{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*"
    ],
    "cleanUrls": true,
    "trailingSlash": true,
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|mp4)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600"
          }
        ]
      },
      {
        "source": "static/**/*.@(jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "static/**/*.@(js|wasm)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/static/1.0.0-beta.2/:path*",
        "destination": "/static/1/:path*",
        "type": 301
      },
      {
        "source": "/static/1.0.0-rc.1/:path*",
        "destination": "/static/2/:path*",
        "type": 301
      },
      {
        "source": "/static/1.:version/:path*",
        "destination": "/static/3/:path*",
        "type": 301
      }
    ]
  }
}
