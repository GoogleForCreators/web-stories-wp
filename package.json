    "@prettier/plugin-xml": "^0.7.1",
    "@storybook/addon-a11y": "^5.3.13",
    "@storybook/addon-backgrounds": "^5.3.13",
    "@storybook/addon-docs": "^5.3.13",
    "@storybook/addon-knobs": "^5.3.13",
    "@storybook/addon-storysource": "^5.3.13",
    "@storybook/addon-viewport": "^5.3.13",
    "@storybook/react": "^5.3.13",
    "@testing-library/react-hooks": "^3.2.1",
    "@wordpress/api-fetch": "^3.11.0",
    "@wordpress/babel-preset-default": "^4.10.0",
    "@wordpress/components": "^9.2.0",
    "@wordpress/element": "^2.11.0",
    "@wordpress/eslint-plugin": "^4.0.0",
    "@wordpress/i18n": "^3.9.0",
    "@wordpress/scripts": "^7.1.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.7",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.24",
    "browserslist": "^4.8.6",
    "colorthief": "^2.3.0",
    "core-js": "^3.6.4",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-utils": "^2.0.0",
    "husky": "^4.2.2",
    "jest-silent-reporter": "^0.2.1",
