                "selector": "#template_3",
                "keyframes": [
                    {"offset": "0", "transform": "translateY(40vh)"},
                    {"offset": "0.5", "transform": "translateY(10vh)"},
                    {"offset": "1", "transform": "translateY(-10vh)"}
                ]
              }, {
                "selector": "#template_4",
                "keyframes": [
                    {"offset": "0", "transform": "translateY(20vh)"},
                    {"offset": "0.5", "transform": "translateY(0)"},
                    {"offset": "1", "transform": "translateY(-10vh)"}
                ]
              }, {
                "selector": "#template_5",
                "keyframes": [
                    {"offset": "0", "transform": "translateY(20vh)"},
                    {"offset": "0.5", "transform": "translateY(5vh)"},
                    {"offset": "1", "transform": "translateY(-10vh)"}
                ]
              }, {
                "selector": "#template_6",
                "keyframes": [
                    {"offset": "0", "transform": "translateY(40vh)"},
                    {"offset": "0.5", "transform": "translateY(5vh)"},
                    {"offset": "1", "transform": "translateY(-10vh)"}
                ]
              }, {
                "selector": "#template_7",
                "keyframes": [
                    {"offset": "0", "transform": "translateY(20vh)"},
                    {"offset": "0.5", "transform": "translateY(-5vh)"},
                    {"offset": "1", "transform": "translateY(-10vh)"}
                ]
              }, {
                "selector": "#template_8",
                "keyframes": [
                    {"offset": "0", "transform": "translateY(60vh)"},
                    {"offset": "0.5", "transform": "translateY(5vh)"},
                    {"offset": "1", "transform": "translateY(-10vh)"}
                ]
              }
            ]
          }
      </script>
    </amp-animation>

    <div id="find_callout">
      <p>{{ $("Find your template!") }}</p>
      <div id="templates">
        <amp-img id="template_1" src="/img/template_1.jpg" width="239px" height="426px" layout="responsive" ></amp-img>
        <div>
          <amp-img id="template_2" src="/img/template_2.jpg" width="157px" height="280px" layout="responsive" ></amp-img>
